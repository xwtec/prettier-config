{
  "name": "@xwtec/prettier-config",
  "description": "Prettier Configuration for xwtec projects",
  "version": "1.0.2",
  "main": "lib/index.js",
  "repository": "xwtec/prettier-config",
  "author": {
    "name": "xwtec",
    "url": "https://github.com/xwtec"
  },
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-emoji"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@fisker/commitlint-config": "^1.1.0",
    "@fisker/lint-staged-config": "^1.0.4",
    "@xwtec/eslint-config": "^6.0.12",
    "@xwtec/prettier-config": "^1.0.2",
    "ava": "^2.1.0",
    "cz-conventional-changelog-emoji": "^0.1.0",
    "eslint": "^6.0.1",
    "esm": "^3.2.25",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "markdownlint-cli": "^0.17.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "rollup": "^1.16.5"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "ava": {
    "require": "esm"
  },
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "build:rules": "node -r esm ./scripts/generate-options.js",
    "test": "run-p test:*",
    "test:js": "ava",
    "clean": "rimraf lib",
    "dist": "np --yolo --no-yarn",
    "release": "run-s clean lint build test format dist",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint **/*.{js,mjs,vue}",
    "lint:markdown": "markdownlint **/*.md --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --check",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier **/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml} --write"
  },
  "files": [
    "lib"
  ],
  "prettier": "@xwtec/prettier-config"
}
