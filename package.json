{
  "name": "@xwtec/prettier-config",
  "version": "2.0.1",
  "description": "Prettier Configuration for xwtec projects",
  "repository": "xwtec/prettier-config",
  "license": "MIT",
  "author": {
    "name": "xwtec",
    "url": "https://github.com/xwtec"
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "lib/index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:js": "rollup --config",
    "build:rules": "node -r esm ./scripts/generate-options.js",
    "clean": "rimraf lib",
    "dev": "rollup --config --watch",
    "dist": "run-p dist:*",
    "dist:npm": "np --yolo --no-yarn",
    "format": "run-p format:*",
    "format:eslint": "yarn lint:eslint --fix",
    "format:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --write",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint \"**/*.{js,mjs,vue}\"",
    "lint:markdown": "markdownlint \"**/*.md\" --ignore \"**/node_modules/**\"",
    "lint:prettier": "prettier \"**/*.{css,html,js,json,less,md,scss,ts,vue,yaml,yml}\" --check",
    "release": "run-s clean lint build test format dist",
    "test": "run-p test:*",
    "test:js": "ava"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@xwtec/prettier-config",
  "ava": {
    "require": "esm",
    "verbose": true
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@fisker/commitlint-config": "1.1.7",
    "@fisker/husky-config": "2.1.3",
    "@fisker/lint-staged-config": "2.1.0",
    "@xwtec/eslint-config": "6.3.0",
    "@xwtec/prettier-config": "2.0.1",
    "ava": "3.8.2",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.0.0",
    "esm": "3.2.25",
    "husky": "4.2.5",
    "lint-staged": "10.2.4",
    "markdownlint-cli": "0.23.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "rollup": "2.10.7"
  },
  "peerDependencies": {
    "prettier": "*"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
